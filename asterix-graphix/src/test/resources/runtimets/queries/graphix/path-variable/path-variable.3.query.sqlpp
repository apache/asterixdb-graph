// Single vertex path.
FROM GRAPH  VERTEX (:User)
                   PRIMARY KEY (user_id)
                   AS Yelp.Users
MATCH       (u) AS p
UNNEST      p.Vertices AS pathVertex
SELECT      LEN(p.Edges) AS pathLength,
            pathVertex
ORDER BY    u.user_id;
